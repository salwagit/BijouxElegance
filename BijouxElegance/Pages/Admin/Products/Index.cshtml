@page
@model BijouxElegance.Pages.Admin.Products.IndexModel
@{
    ViewData["Title"] = "Gestion des Produits";
}

<div class="container py-5">
    <h1 class="mb-4">Gestion des Produits</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <p>
        <a asp-page="Create" class="btn btn-gold">Nouveau Produit</a>
        <a href="/Admin/Categories" class="btn btn-outline-secondary ms-2">Gérer les Catégories</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Vedette</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        <img src="@item.ImageUrl" style="width: 50px; height: 50px; object-fit: cover;" alt="@item.Name" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Category?.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.StockQuantity</td>
                    <td>
                        @if (item.IsFeatured)
                        {
                            <i class="fas fa-star text-warning"></i>
                        }
                        else
                        {
                            <i class="far fa-star"></i>
                        }
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-primary">Modifier</a>
                        <a asp-page="./Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-danger">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>