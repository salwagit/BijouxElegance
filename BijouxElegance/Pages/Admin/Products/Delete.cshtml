@page "{id:int}"
@model BijouxElegance.Pages.Admin.Products.DeleteModel
@{
    ViewData["Title"] = "Supprimer Produit";
}

<div class="container py-5">
    <h1>Supprimer Produit</h1>

    <h3>Êtes-vous sûr de vouloir supprimer ce produit ?</h3>

    <div>
        <h4>Produit</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Nom</dt>
            <dd class="col-sm-10">@Model.Product.Name</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Product.Description</dd>

            <dt class="col-sm-2">Prix</dt>
            <dd class="col-sm-10">@Model.Product.Price.ToString("C")</dd>

            <dt class="col-sm-2">Catégorie</dt>
            <dd class="col-sm-10">@Model.Product.Category?.Name</dd>

            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                {
                    <img src="@Model.Product.ImageUrl" style="max-width: 200px;" alt="@Model.Product.Name" />
                }
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Product.ProductId" />
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            <a asp-page="Index" class="btn btn-outline-secondary">Annuler</a>
        </form>
    </div>
</div>