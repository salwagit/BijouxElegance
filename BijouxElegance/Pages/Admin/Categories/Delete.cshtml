@page "{id:int}"
@model BijouxElegance.Pages.Admin.Categories.DeleteModel
@{
    ViewData["Title"] = "Supprimer Catégorie";
}

<div class="container py-5">
    <h1>Supprimer Catégorie</h1>

    <h3>Êtes-vous sûr de vouloir supprimer cette catégorie ?</h3>

    <div class="alert alert-danger">
        Attention : Si cette catégorie contient des produits, ils seront également supprimés !
    </div>

    <div>
        <h4>Catégorie</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Nom</dt>
            <dd class="col-sm-10">@Model.Category.Name</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Category.Description</dd>

            <dt class="col-sm-2">Icône</dt>
            <dd class="col-sm-10"><i class="@Model.Category.IconClass"></i> @Model.Category.IconClass</dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Category.CategoryId" />
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            <a asp-page="Index" class="btn btn-outline-secondary">Annuler</a>
        </form>
    </div>
</div>