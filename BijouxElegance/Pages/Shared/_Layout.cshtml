@using BijouxElegance.Components
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bijoux Élégance</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        /* Chat widget styles */
        .chat-widget-toggle {
            position: fixed;
            right: 20px;
            bottom: 20px;
            z-index: 1050;
        }
        .chat-widget {
            position: fixed;
            right: 20px;
            bottom: 80px;
            width: 320px;
            max-width: calc(100% - 40px);
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.15);
            z-index: 1050;
            display: none;
            flex-direction: column;
            overflow: hidden;
            font-family: Inter, Arial, sans-serif;
        }
        .chat-widget.open { display: flex; }
        .chat-widget .chat-header {
            background: linear-gradient(90deg,#b3894a,#f2d586);
            color: #222;
            padding: 10px 12px;
            display:flex;
            align-items:center;
            justify-content:space-between;
        }
        .chat-widget .chat-messages {
            padding: 10px;
            height: 220px;
            overflow-y: auto;
            background: #fbf9f6;
        }
        .chat-widget .chat-input {
            display:flex;
            gap:8px;
            padding:10px;
            border-top:1px solid #eee;
        }
        .chat-bubble.user { text-align: right; color:#fff; background:#6c757d; display:inline-block; padding:8px 12px; border-radius:16px; margin:6px 0; }
        .chat-bubble.bot { text-align: left; color:#111; background:#fff; display:inline-block; padding:8px 12px; border-radius:16px; border:1px solid #eee; margin:6px 0; }
        .chat-loading { font-size: 0.9rem; color: #666; }
        .chat-context { font-size: 0.75rem; color:#666; margin-top:4px }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light site-navbar">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-gem"></i> Bijoux Élégance
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="#navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Accueil</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Catégories
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                            @await Component.InvokeAsync("CategoriesMenu")
                        </ul>
                    </li>
                </ul>

                <div class="d-flex align-items-center">
                    <a href="/Cart" class="nav-link cart-icon position-relative me-3">
                        <i class="fas fa-shopping-bag fa-lg"></i>
                        @await Component.InvokeAsync("CartCount")
                    </a>
                    <a class="btn btn-outline-gold" href="/Admin/Products">Espace admin</a>
                </div>
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container text-center">
            <p>&copy; 2024 Bijoux Élégance - Tous droits réservés</p>
        </div>
    </footer>

    <!-- Chat widget toggle button -->
    <button class="btn btn-primary rounded-circle chat-widget-toggle" id="chatToggle" title="Chatbot" aria-label="Chatbot">
        <i class="fas fa-comment-dots"></i>
    </button>

    <!-- Chat widget -->
    <div class="chat-widget" id="chatWidget" role="dialog" aria-label="Chatbot">
        <div class="chat-header">
            <div style="display:flex;align-items:center;gap:8px;">
                <i class="fas fa-robot fa-lg"></i>
                <strong>Assistance</strong>
            </div>
            <button class="btn btn-sm btn-light" id="chatClose">Fermer</button>
        </div>
        <div class="chat-messages" id="chatMessages"></div>
        <div class="chat-input">
            <input id="chatInput" class="form-control form-control-sm" placeholder="Écrivez un message..." />
            <button id="chatSend" class="btn btn-gold btn-sm">Envoyer</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function(){
            const toggle = document.getElementById('chatToggle');
            const widget = document.getElementById('chatWidget');
            const closeBtn = document.getElementById('chatClose');
            const sendBtn = document.getElementById('chatSend');
            const input = document.getElementById('chatInput');
            const messages = document.getElementById('chatMessages');

            // Append a single message bubble
            const appendMessage = (text, who, meta) => {
                const wrap = document.createElement('div');
                const div = document.createElement('div');
                div.className = who === 'user' ? 'chat-bubble user' : 'chat-bubble bot';
                div.textContent = text;
                wrap.appendChild(div);
                if (meta && meta.contextCount != null) {
                    const c = document.createElement('div');
                    c.className = 'chat-context';
                    c.textContent = 'Résultats trouvés: ' + meta.contextCount;
                    wrap.appendChild(c);
                }
                messages.appendChild(wrap);
                messages.scrollTop = messages.scrollHeight;
            };

            // Loading indicator
            const setLoading = (on) => {
                if (on) {
                    const d = document.createElement('div');
                    d.className = 'chat-loading';
                    d.id = 'chat-loading';
                    d.textContent = '...';
                    messages.appendChild(d);
                    messages.scrollTop = messages.scrollHeight;
                } else {
                    const d = document.getElementById('chat-loading');
                    if (d) d.remove();
                }
            };

            // Display suggested products returned by API
            const displaySuggestedProducts = (products) => {
                if (!products || products.length === 0) return;
                const messagesDiv = document.getElementById('chatMessages');

                const productsHtml = products.map(product => `
                    <div class="suggested-product" style="
                        border: 1px solid #e0c9a6;
                        border-radius: 8px;
                        padding: 12px;
                        margin: 10px 0;
                        background: #fffaf0;
                    ">
                        <div style="display: flex; gap: 12px; align-items: center;">
                            <img src="${product.image || '/images/default-product.png'}" 
                                 style="width: 60px; height: 60px; object-fit: cover; border-radius: 4px;"
                                 onerror="this.src='/images/default-product.png'">
                            <div style="flex: 1;">
                                <strong style="color: #b3894a;">${product.name}</strong>
                                <div style="font-size: 1.1em; color: #2c3e50; font-weight: bold;">
                                    ${product.price}
                                </div>
                                <div style="font-size: 0.85em; color: #666;">
                                    ${product.stock > 0 ? '✅ En stock' : '⏳ Bientôt disponible'}
                                </div>
                            </div>
                        </div>
                        <a href="/Product/Details/${product.id}" 
                           class="btn-view-product" 
                           style="
                                display: block;
                                text-align: center;
                                margin-top: 8px;
                                padding: 6px;
                                background: linear-gradient(90deg,#b3894a,#f2d586);
                                color: white;
                                border-radius: 4px;
                                text-decoration: none;
                                font-size: 0.9em;
                           ">
                           👁️ Voir ce produit
                        </a>
                    </div>
                `).join('');

                const container = document.createElement('div');
                container.innerHTML = `
                    <div style="font-size: 0.85em; color: #b3894a; margin: 5px 0;">
                        💎 Produits correspondants :
                    </div>
                    ${productsHtml}
                `;

                messagesDiv.appendChild(container);
                messagesDiv.scrollTop = messagesDiv.scrollHeight;
            };

            // Instant fallback responses
            const getInstantFallback = (text) => {
                const lowerText = text.toLowerCase();

                const responses = {
                    'bonjour': 'Bonjour ! Bienvenue chez Bijoux Élégance. 💎',
                    'salut': 'Salut ! Comment puis-je vous aider aujourd\'hui ?',
                    'prix': 'Consultez nos fiches produits pour les prix détaillés.',
                    'livraison': 'Livraison offerte à partir de 150€ d\'achat ! 🚚',
                    'contact': '📞 01 23 45 67 89 | ✉️ contact@bijouxelegance.com',
                    'heure': 'Ouvert du lundi au samedi, 10h-19h.',
                    'adresse': '123 Avenue des Champs-Élysées, 75008 Paris 🗼',
                    'cadeau': 'Emballage cadeau offert sur demande ! 🎁'
                };

                for (const [keyword, response] of Object.entries(responses)) {
                    if (lowerText.includes(keyword)) {
                        return { reply: response, contextCount: 0 };
                    }
                }

                return { reply: 'Pour une assistance personnalisée, contactez-nous directement. 📞', contextCount: 0 };
            };

            const generateSessionId = () => {
                return 'session_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
            };

            const formatCurrency = (amount) => {
                try {
                    return new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(amount);
                } catch (e) {
                    return amount + '€';
                }
            };

        // Call Groq API avec RAG
        const sendToAi = async (text) => {
            // ===============================
            // 🛒 Lire le panier local
            // ===============================
            let raw = localStorage.getItem('bijoux-cart') || localStorage.getItem('cart');
            let localCartItems = [];

            if (raw) {
                try {
                    const parsed = JSON.parse(raw);
                    if (Array.isArray(parsed)) {
                        localCartItems = parsed.map(item => ({
                            ProductId: parseInt(item.productId || item.ProductId || item.id, 10) || 0,
                            Quantity: parseInt(item.quantity || item.qty || item.Quantity, 10) || 1
                        })).filter(i => i.ProductId > 0 && i.Quantity > 0);
                    }
                } catch (e) {
                    console.warn("⚠️ Panier local illisible", e);
                }
            }

            try {
                const response = await fetch('/api/groq/chat', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({
                        message: text,
                        sessionId: generateSessionId(),
                        localCart: localCartItems
                    })
                });

                const rawText = await response.text();

                if (!response.ok) {
                    console.error("❌ API HTTP Error:", rawText);
                    throw new Error(rawText || `HTTP ${response.status}`);
                }

                let data;
                try {
                    data = JSON.parse(rawText);
                } catch (e) {
                    console.error("❌ JSON invalide:", rawText);
                    throw new Error("Réponse serveur invalide");
                }

                // ===============================
                // ✅ CAS NORMAL (SUCCESS)
                // ===============================
                if (data.success) {
                    return {
                        reply: data.reply || "Voici ce que j’ai trouvé 🤍",
                        products: data.products || [],
                        contextCount: data.products?.length || 0
                    };
                }

                // ===============================
                // ⚠️ CAS DÉGRADÉ (PAS D’ERREUR)
                // ===============================
                return {
                    reply: data.reply || "Je peux vous aider à trouver le bijou idéal 🤍",
                    products: data.products || []
                };

            } catch (error) {
                console.error("🔥 sendToAi error:", error);

                return {
                    reply: "Je suis là 🤍 Pouvez-vous préciser le type de bijou ou le budget ?",
                    products: []
                };
            }
        };

            const onSend = async () => {
                const text = input.value.trim();
                if (!text) return;

                // append user once here
                appendMessage(text, 'user');
                input.value = '';

                setLoading(true);
                const result = await sendToAi(text);
                setLoading(false);

                // append bot once here
                appendMessage(result.reply, 'bot', { contextCount: result.contextCount });

                if (result.products && result.products.length > 0) {
                    displaySuggestedProducts(result.products);
                }

                return result;
            };

            toggle.addEventListener('click', () => {
                widget.classList.toggle('open');
                input.focus();
            });

            closeBtn.addEventListener('click', () => widget.classList.remove('open'));
            sendBtn.addEventListener('click', onSend);
            input.addEventListener('keydown', (e) => { if (e.key === 'Enter') onSend(); });

            // Greet user once when opened
            let greeted = false;
            toggle.addEventListener('click', () => {
                if (!greeted) {
                    appendMessage("Bonjour ! Je suis l'assistant. Posez-moi une question.", 'bot');
                    greeted = true;
                }
            });
        })();
    </script>

    <!-- Section Scripts optionnelle -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>