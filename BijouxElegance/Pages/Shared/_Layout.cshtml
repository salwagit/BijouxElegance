@using BijouxElegance.Components
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bijoux Élégance</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        /* Chat widget styles */
        .chat-widget-toggle {
            position: fixed;
            right: 20px;
            bottom: 20px;
            z-index: 1050;
        }
        .chat-widget {
            position: fixed;
            right: 20px;
            bottom: 80px;
            width: 320px;
            max-width: calc(100% - 40px);
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.15);
            z-index: 1050;
            display: none;
            flex-direction: column;
            overflow: hidden;
            font-family: Inter, Arial, sans-serif;
        }
        .chat-widget.open { display: flex; }
        .chat-widget .chat-header {
            background: linear-gradient(90deg,#b3894a,#f2d586);
            color: #222;
            padding: 10px 12px;
            display:flex;
            align-items:center;
            justify-content:space-between;
        }
        .chat-widget .chat-messages {
            padding: 10px;
            height: 220px;
            overflow-y: auto;
            background: #fbf9f6;
        }
        .chat-widget .chat-input {
            display:flex;
            gap:8px;
            padding:10px;
            border-top:1px solid #eee;
        }
        .chat-bubble.user { text-align: right; color:#fff; background:#6c757d; display:inline-block; padding:8px 12px; border-radius:16px; margin:6px 0; }
        .chat-bubble.bot { text-align: left; color:#111; background:#fff; display:inline-block; padding:8px 12px; border-radius:16px; border:1px solid #eee; margin:6px 0; }
        .chat-loading { font-size: 0.9rem; color: #666; }
        .chat-context { font-size: 0.75rem; color:#666; margin-top:4px }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light site-navbar">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-gem"></i> Bijoux Élégance
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="#navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Accueil</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Catégories
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                            @await Component.InvokeAsync("CategoriesMenu")
                        </ul>
                    </li>
                </ul>

                <div class="d-flex align-items-center">
                    <a href="/Cart" class="nav-link cart-icon position-relative me-3">
                        <i class="fas fa-shopping-bag fa-lg"></i>
                        @await Component.InvokeAsync("CartCount")
                    </a>
                    <a class="btn btn-outline-gold" href="/Admin/Products">Espace admin</a>
                </div>
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container text-center">
            <p>&copy; 2024 Bijoux Élégance - Tous droits réservés</p>
        </div>
    </footer>

    <!-- Chat widget toggle button -->
    <button class="btn btn-primary rounded-circle chat-widget-toggle" id="chatToggle" title="Chatbot" aria-label="Chatbot">
        <i class="fas fa-comment-dots"></i>
    </button>

    <!-- Chat widget -->
    <div class="chat-widget" id="chatWidget" role="dialog" aria-label="Chatbot">
        <div class="chat-header">
            <div style="display:flex;align-items:center;gap:8px;">
                <i class="fas fa-robot fa-lg"></i>
                <strong>Assistance</strong>
            </div>
            <button class="btn btn-sm btn-light" id="chatClose">Fermer</button>
        </div>
        <div class="chat-messages" id="chatMessages"></div>
        <div class="chat-input">
            <input id="chatInput" class="form-control form-control-sm" placeholder="Écrivez un message..." />
            <button id="chatSend" class="btn btn-gold btn-sm">Envoyer</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function(){
            const toggle = document.getElementById('chatToggle');
            const widget = document.getElementById('chatWidget');
            const closeBtn = document.getElementById('chatClose');
            const sendBtn = document.getElementById('chatSend');
            const input = document.getElementById('chatInput');
            const messages = document.getElementById('chatMessages');

            const appendMessage = (text, who, meta) => {
                const wrap = document.createElement('div');
                const div = document.createElement('div');
                div.className = who === 'user' ? 'chat-bubble user' : 'chat-bubble bot';
                div.textContent = text;
                wrap.appendChild(div);
                if (meta && meta.contextCount != null) {
                    const c = document.createElement('div');
                    c.className = 'chat-context';
                    c.textContent = 'Résultats trouvés: ' + meta.contextCount;
                    wrap.appendChild(c);
                }
                messages.appendChild(wrap);
                messages.scrollTop = messages.scrollHeight;
            };

            const setLoading = (on) => {
                if (on) {
                    const d = document.createElement('div');
                    d.className = 'chat-loading';
                    d.id = 'chat-loading';
                    d.textContent = '...';
                    messages.appendChild(d);
                    messages.scrollTop = messages.scrollHeight;
                } else {
                    const d = document.getElementById('chat-loading');
                    if (d) d.remove();
                }
            };

            const sendToAi = async (text) => {
                // Prefer Ollama local model endpoint
                try {
                    const res = await fetch('/chat/ai-ollama', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ message: text })
                    });
                    const json = await res.json();
                    if (res.ok && (json.reply || json.error)) {
                        return { reply: json.reply || json.error, contextCount: json.contextCount };
                    }
                    // fallthrough to fallback
                } catch (e) {
                    // ignore and fallback
                }

                // Fallback to local canned endpoint
                try {
                    const res = await fetch('/chat', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ message: text })
                    });
                    const json = await res.json();
                    return { reply: json.reply || json.error || 'Erreur de traitement', contextCount: null };
                } catch (e) {
                    return { reply: 'Impossible de contacter le service de chat.', contextCount: null };
                }
            };

            const onSend = async () => {
                const text = input.value.trim();
                if (!text) return;
                appendMessage(text, 'user');
                input.value = '';
                setLoading(true);
                const result = await sendToAi(text);
                setLoading(false);
                appendMessage(result.reply, 'bot', { contextCount: result.contextCount });
            };

            toggle.addEventListener('click', () => {
                widget.classList.toggle('open');
                input.focus();
            });
            closeBtn.addEventListener('click', () => widget.classList.remove('open'));
            sendBtn.addEventListener('click', onSend);
            input.addEventListener('keydown', (e) => {
                if (e.key === 'Enter') onSend();
            });

            // Optional: greet user when opened first time
            let greeted = false;
            toggle.addEventListener('click', () => {
                if (!greeted) {
                    appendMessage("Bonjour ! Je suis l'assistant. Posez-moi une question.", 'bot');
                    greeted = true;
                }
            });
        })();
    </script>

    <!-- Section Scripts optionnelle -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>